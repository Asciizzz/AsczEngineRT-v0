v -1 -1 -1
v 1 -1 -1
v 1 1 -1
v -1 1 -1
v -1 -1 1
v 1 -1 1
v 1 1 1
v -1 1 1

# Normals (pointing outward from each vertex)
vn -1 -1 -1
vn 1 -1 -1
vn 1 1 -1
vn -1 1 -1
vn -1 -1 1
vn 1 -1 1
vn 1 1 1
vn -1 1 1

# Colors (NOT IN STANDARD OBJ FORMAT)
